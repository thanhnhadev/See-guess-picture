<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gameplaybackground"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.example.yenyen.duoihinhbatchudemo.ResultActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/avatar" />

            <ImageView
                android:id="@+id/ivAvatarKhung"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:srcCompat="@drawable/avataricon" />

            <TextView
                android:id="@+id/tvCauHoi"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button8"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="110dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttontim"
                android:text="5"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:textColor="#ffffff" />
            />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivCoinIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/coinicon" />

            <TextView
                android:id="@+id/tvTien"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="17dp"
                android:gravity="right"
                android:text="0$"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:textColor="#ffffff"

                android:textStyle="bold" />
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_weight="20">

        <ImageView
            android:id="@+id/ivImageCH"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/canthiep" />

        <ImageView
            android:id="@+id/ivPictureBorder"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/pictureborder"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn đã tìm ra đáp án đúng"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvKetQua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Kết quả"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textColor="#ffffff"
            android:textSize="35dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn được tặng +5"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/ivDolaIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/dolaicon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btChoiTiep"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/buttonchoitiep"
             />

        <Button

            android:id="@+id/btShare"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonchiase"
            />
    </LinearLayout>


</LinearLayout>
